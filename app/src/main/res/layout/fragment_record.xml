<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_purple_background"
        android:fitsSystemWindows="true"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:minHeight="36dp"
            android:paddingHorizontal="24dp"
            app:contentInsetStartWithNavigation="0dp"
            app:title="@string/app_title"
            app:titleCentered="true"
            app:titleMarginTop="-8dp"
            app:titleTextAppearance="@style/TextAppearance.App.TitleLarge.Bold"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content - Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp"
            android:paddingTop="@dimen/main_content_top_padding">

        <!-- SECTION 1: LARGE TIMECODE (Top Hero Area) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timecodeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/card_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="40dp"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/session_time_label"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/brand_on_surface_variant"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvRecordingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                    android:textStyle="bold"
                    android:textColor="@color/brand_on_surface"
                    android:letterSpacing="0"
                    android:fontFamily="monospace"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="56sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvRecordingFilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/brand_on_surface_variant"
                    android:freezesText="true"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:importantForAccessibility="no"
                    android:text=" "
                    tools:text="spcmic_recording_20251002_101500.wav" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SECTION 2: MAIN RECORD BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:minHeight="72dp"
            android:text="@string/record_button_start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_microphone"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/brand_primary"
            app:cornerRadius="36dp"
            app:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/timecodeCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- SECTION 3: COMPACT STATUS CARDS -->
        <!-- Top Row: USB and Clip Indicator -->
        <LinearLayout
            android:id="@+id/statusRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btnRecord"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- USB Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/card_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_usb"
                        android:tint="@color/brand_primary"
                        android:contentDescription="@string/usb_connection_title" />

                    <View
                        android:id="@+id/connectionStatusBadge"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/status_badge_disconnected" />

                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="USB Audio Device Conn..."
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="@color/brand_on_surface_variant"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="11sp"
                        android:ellipsize="end" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Clip Indicator -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/card_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/clipIndicatorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivClipIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/clip_indicator_idle"
                        android:contentDescription="@string/no_clipping_detected" />

                    <TextView
                        android:id="@+id/tvClipIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Clip"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="@color/brand_on_surface_variant"
                        android:textAlignment="center"
                        android:textSize="11sp"
                        android:maxLines="1" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- SECTION 4: CONTROLS (Spinner + Buttons) -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            app:layout_constraintTop_toBottomOf="@id/statusRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Sample Rate Selector -->
            <Spinner
                android:id="@+id/spinnerSampleRate"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_background"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:prompt="@string/sample_rate_title" />

            <!-- Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefreshDevices"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/refresh_devices"
                app:icon="@drawable/ic_refresh"
                app:iconTint="@color/brand_primary"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:backgroundTint="@color/brand_secondary_container"
                app:cornerRadius="28dp" />

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Settings"
                app:icon="@drawable/ic_settings"
                app:iconTint="@color/brand_primary"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:backgroundTint="@color/brand_secondary_container"
                app:cornerRadius="28dp" />

        </LinearLayout>

        <!-- SECTION 5: Storage Location (Full Width) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/controlsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/card_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_folder"
                    android:tint="@color/brand_primary"
                    android:contentDescription="@string/storage_location_title" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="STORAGE"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="@color/brand_on_surface_variant"
                        android:textSize="10sp"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/tvStoragePath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/brand_on_surface"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:ellipsize="middle"
                        tools:text="/mnt/media_rw/..." />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Optional: Scrollable info section (HIDDEN) -->
        <!-- HIDDEN - This info should be in Settings sheet instead -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fillViewport="true"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/storageCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sample Rate Info -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/card_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Device Info"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                            android:textColor="@color/brand_on_surface"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSampleRateStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Selected: 48 kHz"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvNegotiatedSampleRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Device: 48 kHz"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvSampleRateSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Capabilities unknown"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant"
                            android:alpha="0.7" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Recording Configuration -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/recording_configuration_title"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                            android:textColor="@color/brand_on_surface"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvChannelInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="• 84 Channels"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvSampleRateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="• 48 kHz Sample Rate"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvBitDepthInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="• 24-bit Depth"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvFormatInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Uncompressed WAV"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/brand_on_surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
