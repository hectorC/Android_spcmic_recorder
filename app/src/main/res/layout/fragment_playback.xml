<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvPlaybackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordings"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Storage Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStorageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A7C3AED"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#337C3AED">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_folder"
                    android:tint="#7C3AED"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRecordingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 recordings"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStorageUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 MB"
                        android:textColor="#99FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State (shown when no recordings) -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_headphones"
                android:tint="#4D7C3AED"
                android:alpha="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Recordings Yet"
                android:textColor="#99FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record some audio to start playback"
                android:textColor="#66FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Recordings List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecordings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            tools:listitem="@layout/item_recording" />

    </LinearLayout>

    <!-- Player Controls (Bottom Sheet - shown when file selected) -->
    <include
        android:id="@+id/playerControls"
        layout="@layout/player_controls"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/preprocessOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:background="@drawable/rounded_panel">

            <ProgressBar
                android:id="@+id/progressPreprocess"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:progressBackgroundTint="#33FFFFFF" />

            <TextView
                android:id="@+id/tvPreprocessMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preprocessing_message"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPreprocessPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="0%" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
