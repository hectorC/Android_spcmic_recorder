<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:cardBackgroundColor="#CC0F0D15"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Now Playing Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOW PLAYING"
                    android:textColor="#66FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvNowPlayingFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"
                    tools:text="spcmic_recording_20251004.wav" />
            </LinearLayout>

            <!-- Close Button -->
            <ImageView
                android:id="@+id/btnClosePlayer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:padding="8dp"
                android:tint="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Timeline Scrubber -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <SeekBar
                android:id="@+id/seekBarTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#7C3AED"
                android:progressBackgroundTint="#337C3AED"
                android:thumbTint="#A78BFA"
                android:max="1000"
                android:progress="0" />

            <!-- Time Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvCurrentPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTotalDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

        <!-- Transport Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Stop Button -->
            <ImageView
                android:id="@+id/btnStop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_stop"
                android:padding="16dp"
                android:tint="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Play/Pause Button (Main) -->
            <ImageView
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_play"
                android:padding="18dp"
                android:background="@drawable/circle_button_background"
                android:tint="@android:color/white"
                android:elevation="4dp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Loop Button (Optional) -->
            <ImageView
                android:id="@+id/btnLoop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_loop"
                android:padding="16dp"
                android:tint="#66FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Gain Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvGainLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gain_label"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGainValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gain_value_zero"
                    android:textColor="#99FFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderGain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:valueFrom="0"
                android:valueTo="48"
                android:stepSize="0.5"
                android:value="0"
                app:thumbColor="#A78BFA"
                app:trackColorActive="#7C3AED"
                app:trackColorInactive="#337C3AED"
                app:haloColor="#7C3AED" />
        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:indeterminateTint="#7C3AED"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
