<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_background"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingHorizontal="24dp"
            app:contentInsetStartWithNavigation="0dp"
            app:title="@string/app_title"
            app:titleCentered="true"
            app:titleTextColor="@color/brand_on_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="@dimen/main_content_top_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/brand_surface_variant"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/session_time_label"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant" />

                    <TextView
                        android:id="@+id/tvRecordingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                        android:textStyle="bold"
                        android:textColor="@color/brand_on_surface"
                        android:letterSpacing="0.05"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/tvRecordingFilename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:freezesText="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:importantForAccessibility="no"
                        android:text=" "
                        tools:text="spcmic_recording_20251002_101500.wav" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:enabled="false"
                android:minHeight="64dp"
                android:text="@string/record_button_start"
                android:textAllCaps="false"
                android:textColor="@color/brand_on_primary"
                android:textSize="20sp"
                app:backgroundTint="@color/brand_primary"
                app:cornerRadius="18dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/clipIndicatorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvClipIndicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/clip_indicator_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:text="@string/no_clipping_detected"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetClip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/reset_clip"
                        android:textAllCaps="false"
                        android:textColor="@color/brand_on_surface"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="18dp"
                        app:strokeColor="@color/brand_outline"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/usb_connection_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/brand_on_surface" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/usb_device_not_found"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/brand_on_surface" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRefreshDevices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/refresh_devices"
                            android:textAllCaps="false"
                            android:textColor="@color/brand_on_secondary_container"
                            app:backgroundTint="@color/brand_secondary_container"
                            app:cornerRadius="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/sampleRateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvSampleRateLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sample_rate_title"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/brand_on_surface" />

                        <Spinner
                            android:id="@+id/spinnerSampleRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSampleRateStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected sample rate: 48,000 Hz"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNegotiatedSampleRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Device reported rate: 48,000 Hz"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvSampleRateSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Device sample rate capabilities unknown"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/brand_on_surface_variant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/recording_configuration_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/brand_on_surface" />

                    <TextView
                        android:id="@+id/tvChannelInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 84 Channels"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSampleRateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 48 kHz Sample Rate"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBitDepthInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 24-bit Depth"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvFormatInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Uncompressed WAV Format"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_on_surface_variant"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <com.spcmic.recorder.LevelMeterView
                        android:id="@+id/levelMeterView"
                        android:layout_width="wrap_content"
                        android:layout_height="240dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp" />

                </HorizontalScrollView>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>