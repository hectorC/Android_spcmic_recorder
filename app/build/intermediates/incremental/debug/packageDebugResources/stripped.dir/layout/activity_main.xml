<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="@dimen/main_content_top_padding"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPCMic 84-Channel Recorder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Connection Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No USB Audio Device Found"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRefreshDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reconnect"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Sample Rate Selection -->
    <LinearLayout
        android:id="@+id/sampleRateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvSampleRateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sample Rate"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerSampleRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSampleRateStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected sample rate: 48,000 Hz"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvNegotiatedSampleRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device reported rate: 48,000 Hz"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/clipIndicatorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvClipIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No clipping detected"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:background="@drawable/clip_indicator_background" />

        <Button
            android:id="@+id/btnResetClip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Recording Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Start Recording"
            android:textSize="18sp"
            android:enabled="false" />

    </LinearLayout>

    <!-- Recording Time -->
    <TextView
        android:id="@+id/tvRecordingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Recording Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recording Configuration:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvChannelInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 84 Channels"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSampleRateInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 48 kHz Sample Rate"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBitDepthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 24-bit Depth"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvFormatInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Uncompressed WAV Format"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSampleRateSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device supports discrete sample rates"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Level Meter -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="horizontal"
        android:visibility="gone">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.spcmic.recorder.LevelMeterView
                android:id="@+id/levelMeterView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center" />

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>